#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 16, 2);
int b;
void setup(){
  lcd.init();
  lcd.backlight();
  randomSeed(analogRead(A0));
  Serial.begin(9600);
  lcd.print("A?     B?     C?");
}
void loop() 
{
  int i = random(1,4);
  lcd.clear();
  lcd.print("A?     B?     C?");
  
  while( ! Serial.available() ) ;
  
   String a = Serial.readString();
  
  if(a == "A")
    b = 1;
  else if(a == "B")
    b = 2;
  else if(a == "C")
    b = 3;
  else
    b = 4;
  
  lcd.setCursor(0,1);
  if(b == i)
    lcd.print("UHADOL");
  else if(b == 4)
    lcd.print("zadal si zle");
  else
    lcd.print("NEUHADOL");
  delay(500);
}
